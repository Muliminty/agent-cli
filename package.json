{
  "name": "agent-cli",
  "version": "1.0.0",
  "description": "长效运行智能体CLI工具 - 实现双轨方案的项目管理和自动化开发",
  "main": "dist/index.js",
  "bin": {
    "agent-cli": "./bin/agent-cli"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build"
  },
  "keywords": ["ai", "agent", "cli", "automation", "development", "typescript"],
  "author": "Muliminty",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.17",
    "ora": "^8.0.1",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.4",
    "simple-git": "^3.22.0",
    "puppeteer": "^22.6.0",
    "execa": "^8.0.1",
    "boxen": "^7.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/js-yaml": "^4.0.9",
    "@types/jest": "^29.5.12",
    "typescript": "^5.3.3",
    "tsup": "^8.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  }
